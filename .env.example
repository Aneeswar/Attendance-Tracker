# Docker Environment Variables Example
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=0000
POSTGRES_DB=attendance_db

# Spring Boot Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/attendance_db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=0000

# Server Configuration
PORT=8080
JAVA_TOOL_OPTIONS=-Xmx512m

# JWT Configuration
JWT_SECRET=my_super_secret_key_for_jwt_token_generation_that_is_long_enough_to_be_secure_and_meets_the_requirements_of_512bits_minimum_length_needed_for_HS512
JWT_EXPIRATION=86400000

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_DEEPAK_ATTENDANCE=DEBUG
